<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PaymentActivity">

    <TextView
        android:id="@+id/txtRegisterEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:layout_margin="10dp"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/txtRegisterYourself"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Yourself"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_below="@+id/txtRegisterEventName"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRegisterYourself"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/namelayout">


                <EditText
                    android:layout_width="match_parent"
                    android:hint="Captain Name"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/rolllayout"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namelayout">


                <EditText
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:hint="Roll No"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:id="@+id/roll"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/emaillayout"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rolllayout">


                <EditText
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:id="@+id/email"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/passLayout"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emaillayout">


                <EditText
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:hint="Contact number"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:id="@+id/pass"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/confirmPassLayout"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passLayout">


                <EditText
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:hint="Team Name"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:id="@+id/etTeamName"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:layout_width="match_parent"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/spinnerCourse"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_below="@+id/confirmPassLayout"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="50dp"
                android:text="Register"
                android:textSize="22sp"
                android:textAllCaps="false"
                android:layout_below="@+id/spinnerCourse"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
